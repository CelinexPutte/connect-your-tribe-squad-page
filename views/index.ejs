<%- include('./partials/head') %>

<main>
	<h1><%= squad.name %></h1>
	<section class="options">
		<div class="options-title">
			<h2>Sorteren</h2>
			<i class="fa-solid fa-caret-down"></i>
		</div>
		<div class="sort-filter">
			<a href="?orderBy=name">Voornaam A-Z</a>
			<a href="?orderBy=name&direction=DESC">Voornaam Z-A</a>
			<a href="?orderBy=surname">Achternaam A-Z</a>
			<a href="?orderBy=surname&direction=DESC">Achternaam Z-A</a>
		</div>
	</section>
	<section class="cards">
		<% squad.members.forEach(member => { %>
			<article>
				<% if (member.avatar) { %>
				<img src="<%- member.avatar %>" alt="Avatar van <%= member.name %>" />
				<% } else { %>
				<img src="images/placeholder.jpg" alt="Placeholder avatar" />
				<% } %>
				<div class="info-card">
					<h2><%= member.name%> <%= member.prefix %> <%= member.surname%></h2>
					<a href="https://github.com/<%= member.gitHubHandle %>"><%- member.gitHubHandle %></a>
				</div>
			</article>
		<% }) %>
	</section>
</main>

<%- include('./partials/foot') %>
